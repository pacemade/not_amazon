<h1><%= @product.name %></h1>


<ul>
  <li>Description: <%= @product.description %></li>
  <li>Price: <%= dollars(@product.price) %></li>
</ul>

<ul>
  <% @product.reviews.each do |review|  %>
    <li><%= review.comment %>
        <%= link_to "Edit", edit_product_review_path(@product.id, review.id ) %>
        <%= link_to("Delete", "/products/#{@product.id}/reviews/#{review.id}", method: :delete, data: {confirm: "Are you sure you want to delete this comment?"})  %>
    </li>

  <% end %>
</ul>

<% if @review.errors.any? %>
<%= @review.errors.full_messages[0] %>
<% end %>

<%= form_for [@product, @review] do |f|%>
  <p>
    <%= f.label :comment %>
    <%= f.text_area :comment %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to "Back", products_path %>
|
<%= link_to "Edit", edit_product_path(@product) %>
|
